generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @db.VarChar(100)
  email    String @db.VarChar(200)
  password String @db.VarChar(255)

  @@map("users")
}

model SmartScan {
  id            Int    @id @default(autoincrement())
  file_name     String @db.VarChar(200)
  response_json String @db.LongText()

  @@map("smart_scans")
}

model FamilyCard {
  id                    Int     @id @default(autoincrement())
  number                String? @db.VarChar(60)
  file_name             String? @db.VarChar(30)
  kk_no_gros            String? @db.VarChar(60)
  kk_no                 String? @db.VarChar(60)
  cabang                String? @db.VarChar(255)
  name                  String? @db.VarChar(255)
  nik_gros              String? @db.VarChar(255)
  nik                   String? @db.VarChar(255)
  gender                String? @db.VarChar(255)
  date_of_birth         String? @db.VarChar(255)
  place_of_birth        String? @db.VarChar(255)
  religion              String? @db.VarChar(255)
  education             String? @db.VarChar(255)
  profession            String? @db.VarChar(255)
  marital_status        String? @db.VarChar(255)
  status_on_family_card String? @db.VarChar(255)
  citizenship           String? @db.VarChar(255)
  father_name           String? @db.VarChar(255)
  mother_name           String? @db.VarChar(255)
  father_on_family_card String? @db.VarChar(255)
  mother_on_family_card String? @db.VarChar(255)
  address               String? @db.VarChar(255)
  rt_rw                 String? @db.VarChar(255)
  kelurahan             String? @db.VarChar(255)
  kecamatan             String? @db.VarChar(255)
  kabupaten             String? @db.VarChar(255)
  province              String? @db.VarChar(255)
  postal_code           String? @db.VarChar(255)

  @@map("family_cards")
}
