{
  "env": {
    "es2023": true,
    "node": true,
    "jest": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "linebreak-style": "off",
    "indent": ["error", 4],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "always",
        "mjs": "never",
        "jsx": "never",
        "json": "never"
      }
    ]
  }
}
